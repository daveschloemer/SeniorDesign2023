@model IEnumerable<FreshBooks.Models.Book>
@{
    ViewBag.Title = "Catalog";
}

<br />
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="border border-dark">
                <img src="@Html.DisplayFor(Model => item.imagesURL)" width="250" height="250" />
                <h3>@Html.DisplayFor(Model => item.Title)</h3>
                <ul class="product-props">
                    <li>
                        @Html.DisplayNameFor(model => model.ISBN) : @if (item.ISBN is null)
                        {
                            @Html.DisplayText("Test")
                            ;
                        }
                        else
                        {
                            @Html.DisplayFor(Model => item.ISBN)
                            ;
                        }
                    </li>
                    <li>@Html.DisplayNameFor(model => model.Edition) : @Html.DisplayFor(Model => item.Edition)</li>
                    <li>@Html.DisplayNameFor(model => model.Price) : @Html.DisplayFor(Model => item.Price)</li>
                    <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">Show Detail</a>
                    <a href="/OrderForm">
                        <button type="button" id="contactSeller" class="btn btn-success" data-toggle="collapse" data-target="#contactform3">Contact Seller</button>
                    </a>
                </ul>
            </div>
        </div>

    }
</div>

<script>
    var search = document.getElementById("searchTxt").value;
    if (search == C#)
    {
        document.getElementById("ItDummies").
            document.getElementById("Networking").hidden;
    };
            else if (search == networking) {
        document.getElementById("ItDummies").hidden;
        document.getElementById("C#").hidden;
    };
            else ()
            {
        document.getElementById("C#").hidden;
        document.getElementById("Networking").hidden;
    };</script>