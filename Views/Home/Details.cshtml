<div class="row">
    <div class="col-md-6 col-lg-5 mb-5">
        <img src="@Model.imagesURL" class="w-100 rounded" alt="@Model.Title">
    </div>

    <div class="col-md-6 col-lg-7">
        <h1 class="mb-4">@Model.Title</h1>

        <div class="product-props mb-5">
            <h2 class="h4">Product Details</h2>
            <ul class="list-unstyled">
                <li><strong>ISBN:</strong> @Model.ISBN</li>
                <li><strong>Author:</strong> @Model.Author</li>
                <li><strong>Subject:</strong> @Model.Subject</li>
                <li><strong>Edition:</strong> @Model.Edition</li>
            </ul>
        </div>

        <div class="d-flex align-items-center mb-5">
            <div class="mr-5">
                <h2 class="h5">Price</h2>
                <p class="text-primary h4">@Model.Price</p>
            </div>
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/OrderForm">
                        <button type="button" class="btn btn-success btn-lg">Contact Seller</button>
                    </a>
                }
                else
                {
                    <a type="button" class="btn btn-success btn-lg" asp-controller="Account" asp-action="Login">Login to Contact Seller</a>
                }
            </div>
        </div>
    </div>
</div>

