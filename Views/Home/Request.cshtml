@{
    ViewBag.Title = "Request a Book";
}
@model RequestViewModel
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}

<div class="container">
    <div class="col-md-6 offset-md-3">
        <div class="card card-body bg-light">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Title">Title: </label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Author">Author: </label>
                    <input asp-for="Author" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email: </label>
                    <input type="email" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ISBN">ISBN: </label>
                    <input type="ISBN" asp-for="ISBN" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BookSubject">Book Subject: </label>
                    <input type="BookSubject" asp-for="BookSubject" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Edition">Book Edition(N/A if None): </label>
                    <input type="Edition" asp-for="Edition" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price: </label>
                    <input type="Price" asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="username">Username: </label>
                    <input type="username" asp-for="username" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="FirstName">Your First Name: </label>
                    <input type="FirstName" asp-for="FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Your Last Name: </label>
                    <input type="LastName" asp-for="LastName" class="form-control" />
                </div>

                <div class="form-group">
                    <br />
                    <a type="submit" href="/RequestSuccess" class="btn btn-primary" /><i class="fas fa-envelope"></i>Request</a>
                </div>
            </form>
        </div>

    </div>
</div>