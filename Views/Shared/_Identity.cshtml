<!--!User.Identity.IsAuthenticated SHOWS NAV BAR OF A USER HAS NOT BEEN AUTHENTICATED, SHOW THESE-- >
<!--ELSE SHOWS NAV BAR OF A USER HAS BEEN AUTHENTICATED, SHOW THESE-->

@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Home">Home</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Catalog" asp-action="Catalog">Catalog</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>

        </ul>
}
else
{
        <ul class="navbar-nav">

            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Home">Home</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Catalog" asp-action="Catalog">Catalog</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Catalog" asp-action="Create">Sell</a></li>
        @*User profile section*@
            <li class="nav-link">
                <div class="dropdown">
                    <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false"> Hello @UserManager.GetUserAsync(User).Result.FullName</button>
                    <ul class="dropdown-menu" aria-labelledby="profile-btn">
                        <li>
                            <a class="dropdown-item" asp-controller="" asp-action="">
                                <i class="bi bi-list"></i> My Profile
                            </a>
                            <a class="dropdown-item" asp-controller="" asp-action="">
                                <i class="bi bi-list"></i> Settings
                            </a>
                            <a class="dropdown-item" asp-controller="Catalog" asp-action="MyListing">
                                <i class="bi bi-list"></i> My Listings
                            </a>
                        </li>

                    @if (User.IsInRole("Admin"))
                    {
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                                        <i class="bi bi-people"></i> Users
                                    </a>
                                </li>
                    }
                    </ul>
                </div>
            </li>
            <form asp-controller="Account" asp-action="Logout">
            <li class="nav-link">
                <button class="btn btn-outline-danger my-2 my-sm-0">
                    Log Out
                </button>
            </li>
            </form>
        </ul>
}